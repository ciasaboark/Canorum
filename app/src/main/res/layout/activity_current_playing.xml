<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context="org.ciasaboark.canorum.CurrentPlayingActivity">

    <org.ciasaboark.canorum.MusicController
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cur_play_album_art"
        android:layout_above="@+id/cur_play_media_controls"
        android:background="#ff00bb"/>

</RelativeLayout>
